<Application x:Class="RetailAppUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:RetailAppUI.ViewModels"
             xmlns:view="clr-namespace:RetailAppUI.Views">
    <Application.Resources>
        <ResourceDictionary>
            
            <DataTemplate DataType="{x:Type TypeName=viewModel:MainViewModel}">
                <view:MainView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=viewModel:HomeViewModel}">
                <view:HomeView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=viewModel:VendorViewModel}">
                <view:VendorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=viewModel:CustomerViewModel}">
                <view:CustomerView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=viewModel:CompanyDetailViewModel}">
                <view:CompanyDetailView/>
            </DataTemplate>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/ButtonTheme.xaml"/>
                <ResourceDictionary Source="Themes/TextBoxTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>        
    </Application.Resources>
</Application>
