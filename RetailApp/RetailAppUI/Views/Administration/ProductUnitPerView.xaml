<UserControl x:Class="RetailAppUI.Views.Administration.ProductUnitPerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RetailAppUI.Views.Administration"
             mc:Ignorable="d" 
             d:DesignHeight="740" d:DesignWidth="830">
    <Grid Margin="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Unit Per Management"
                       FontSize="25"
                       Foreground="White"
                       Grid.Column="0"
                       Grid.Row="0"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Center"/>
            <Button Grid.Column="1"                    
                    Content="X"
                    Width="30"
                    Margin="5,0,5,0"
                    HorizontalAlignment="Right"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Style="{StaticResource ButtonTheme}"
                    Command="{Binding CloseViewCommand}"/>

            <DataGrid x:Name="unitPer"
                      Background="Transparent"
                      ItemsSource="{Binding UnitPerCollectionView}"
                      SelectedItem="{Binding SelectedUnitPer}"
                      Margin="5"
                      Width="230"
                      HorizontalAlignment="Center"
                      IsReadOnly="True"
                      AutoGenerateColumns="False"
                      HorizontalScrollBarVisibility="Visible"
                      Grid.Row="1"
                      CanUserSortColumns="False"
                      Padding="5,0,0,0"
                      FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Unit Per"
                                        Binding="{Binding Path=UnitPer}"/>

                    <DataGridTextColumn Header="Unit Per Description"
                                        Binding="{Binding Path=UnitPerDescription}"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Vertical"
                        Grid.Column="1"
                        Grid.Row="1"
                        Margin="10,5,5,5"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                <!--Unit Per Name-->
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,10">
                    <TextBlock Text="UnitPer:"
                               Width="150"
                               Foreground="White"
                               HorizontalAlignment="Left"
                               FontSize="14"/>
                    <TextBox Text="{Binding SelectedUnitPer.UnitPer}"
                             Width="250"
                             FontSize="14"
                             Style="{StaticResource TextBoxTheme}"
                             IsReadOnly="{Binding TextReadOnly}"/>
                </StackPanel>

                <!--Unit Per Description-->
                <StackPanel Orientation="Horizontal"
                             Margin="0,0,0,10">
                    <TextBlock Text="Unit Per Description:"
                                Width="150"
                                Foreground="White"
                                HorizontalAlignment="Left"
                                FontSize="14"/>
                    <TextBox Text="{Binding SelectedUnitPer.UnitPerDescription}"
                              Width="250"
                              FontSize="14"
                              Style="{StaticResource TextBoxTheme}"
                              IsReadOnly="{Binding TextReadOnly}"/>
                </StackPanel>
            </StackPanel>

            <!--Command Buttons-->
            <StackPanel Orientation="Horizontal"
                        Grid.Column="1"
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button Content="Add New"
                        Width="75"
                        Style="{StaticResource ButtonTheme}"
                        Margin="5"
                        Command="{Binding AddNewCommand}"/>
                <Button Content="Edit"
                        Width="75"
                        Style="{StaticResource ButtonTheme}"
                        Margin="5"
                        Command="{Binding EditCommand}"/>
                <!--<Button Content="Delete"
                    Width="75"
                    Style="{StaticResource ButtonTheme}"
                    Margin="5"
                    Command="{Binding DeleteCommand}"/>-->
                <Button Content="Save"
                        Width="75"
                        Style="{StaticResource ButtonTheme}"
                        Margin="5"
                        Command="{Binding SaveCommand}"/>
                <Button Content="Cancel"
                        Width="75"
                        Style="{StaticResource ButtonTheme}"
                        Margin="5"
                        Command="{Binding CancelActionCommand}"/>

            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
