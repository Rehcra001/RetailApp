<UserControl x:Class="RetailAppUI.Views.Reports.ReportsSwitchBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RetailAppUI.Views.Reports" 
             xmlns:barcharts="clr-namespace:ChartsLibrary.BarCharts;assembly=ChartsLibrary"
             xmlns:viewModel="clr-namespace:RetailAppUI.ViewModels.Reports"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModel:ReportsSwitchboardViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <barcharts:BarChart BarChartData="{Binding BarChartData}"
                            TitlesFontColor="White"
                            ChartTitleFontSize="24"
                            HorizontalAxisTitleFontSize="20"
                            VerticalAxisTitleFontSize="20"
                            HorizontalAxisLabelFontSize="16"
                            VerticalAxisLabelFontSize="16"/>
    </Grid>
</UserControl>
